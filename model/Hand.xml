<mujoco model="Hand">
    
    <compiler meshdir="meshes"/>
    
    <asset>
		<!-- importieren von stl files, texuren und erstellen von materials -->	
		<mesh file="armteil.stl" />
		<mesh file="handteil.stl" />
        <material name="transparent" rgba="1 0 0 0"/>
    </asset>
    
	<worldbody>

		<body name="arm" pos="19.32 0 0.3" quat="1 0 0 0">
            <geom type="sphere" size=".05" pos="0 0 0.8"/>
            <joint name="armschwung" type="hinge" pos="0 0 0.8" axis="0 1 0" limited="true" range="-100 40" margin=".3"/>
                <geom type="mesh" mesh="armteil"/>
                <body name="hand" pos="0 0 0">    
                    <geom type="mesh" mesh="handteil"/>
                    <body name="haltmagnet2" euler="0 0 -90">
                        <geom type="sphere" size=".01 " pos="0 -.12 -.14" material="transparent" margin="0.1" gap="0.1"/>
                    </body>
                    <body name="haltmagnet3" euler="0 0 -90">
                        <geom type="sphere" size=".01 " pos="0 -.12 .14" material="transparent" margin="0.1" gap="0.1"/>
                    </body>
                    <body name="haltmagnet4" euler="0 0 -90" >
                        <geom type="sphere" size=".01 " pos=".14 -.12 0" material="transparent" margin="0.1" gap="0.1"/>
                    </body>
                    <body name="haltmagnet5" euler="0 0 -90">
                        <geom type="sphere" size=".01 " pos="-.14 -.12 0" material="transparent" margin="0.1" gap="0.1"/>
                    </body>
                </body>
            </body>

	</worldbody>

	<actuator>

		<adhesion name="adhere_arm3" body="haltmagnet2" ctrlrange="0 10" gain="500"/>
		<adhesion name="adhere_arm4" body="haltmagnet3" ctrlrange="0 10" gain="500"/>
		<adhesion name="adhere_arm5" body="haltmagnet4" ctrlrange="0 10" gain="500"/>
		<adhesion name="adhere_arm6" body="haltmagnet5" ctrlrange="0 10" gain="500"/>
        <motor name="schwung" joint="armschwung" ctrllimited="true" ctrlrange="-100 100" gear= "50"/>
		
		
	</actuator>
	
</mujoco>